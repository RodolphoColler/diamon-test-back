datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int                @id @default(autoincrement())
  name            String             @unique
  phone           String         
  gender          String
  birthDay        DateTime
  married         Boolean
  comments        String
  departament     Departament        @relation(fields: [departamentId], references: [id])
  departamentId   Int
}

model Departament {
  id              Int                @id @default(autoincrement())
  name            String             @unique
  User            User[]
}
